<div class="main-container-event">
  <div class="form-container-event">

    <%= simple_form_for @event do |f| %>
    <%= f.input :event_name %>
    <%= f.input :address %>
    <%= f.input :event_capacity %>
    <%= f.input :event_date %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :event_price %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: "button-sign-up" %>
    <% end %>

  </div>
</div>
