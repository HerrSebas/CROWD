<div class="parallax-section4 parallax-event">
  <div class="grid grid-pad">
    <div class="col-1-1" style="vertical-align= center;">
      <div class="content content-header">
        <div>
          <% if @event.photo %>
            <%= cl_image_tag @event.photo.key, class:"card-event-photo"%>
          <% end %>
        </div>
        <h1 class="mx-width"><%= @event.event_name%></h1>
      </div>
    </div>
  </div>
</div>

<svg class="curveUpColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 100 C 20 0 50 0 100 100 Z"></path>
</svg>

<div class="container container-fluid">

  <div class="row" style="grid-gap:0 !important; padding: 1% !important;">

    <div class="row" style="grid-gap: 0!important; padding: 1% !important; align-items:center !important; border: 3px solid #dee3e4; border-radius: 18px;">

      <div class="col-sm" style="align-items:center !important;" >
        <img class="stadium-png"src="https://res.cloudinary.com/dbnrwssis/image/upload/v1667346251/crowd/stadium_content_q2umzf.png" alt="stadium-iso">
      </div>

      <div class="col-sm" style="vertical-align: middle !important;">
        <div class="row row-cols-2" style="grid-gap:0 !important; padding: 1% !important;">
          <div class="col-sm"><a style="color: grey !important; text-align: center;"><strong>Date:</strong></a></div>
          <div class="col-sm"><%= @event.event_date %></div>
          <div class="col-sm"><a style="color: grey !important; text-align: center;"><strong>Capacity:</strong></a></div>
          <div class="col-sm"><%=@event.event_capacity %> people</div>

          <div class="col-sm"><a style="color: grey !important; text-align: center;"><strong>Location:</strong></a></div>
          <div class="col-sm"><%= @event.address %></div>

        </div>
      </div>

      <div class="col-sm-6">
        <div class= "map-show" data-controller="map"
          id='map'
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-markers-value="<%= @markers.to_json %>"
          <%# style='width: 500px; height: 400px;'> %>>
        </div>
      </div>
    </div>

  <div class="container container-fluid">
    <div class="row" style="grid-gap: 0!important; padding: 1% !important; align-items:center !important; border: 3px solid #dee3e4; border-radius: 18px; margin-top: 3%;">
        <div class="col-sm">
          <h2 style="text-align: center;">$<%= @event.event_price %></h2>
        </div>

        <div class="col-sm">
          <div class= "container pt-700 bg-white">
            <a><strong>How many tickets, <%= current_user.name %>?</strong></a>
            <%= simple_form_for [@event, @order] do |f| %>
            <%= f.input :tickets_quantity, label:"Quantity", input_html:{} %>
            <%= f.button :submit, "Book a ticket!", class:"btn btn-event" %>
            <% end %>
          </div>
        </div>

      </div>

      </div>
    </div>
  </div>

</div>


