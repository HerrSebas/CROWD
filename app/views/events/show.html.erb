<div class="parallax-section4 parallax-event">
  <div class="grid grid-pad">
      <div class="col-1-1" style="vertical-align= center;">
            <div class="content content-header">
              <div>
                <% if @event.photo %>
                  <%= cl_image_tag @event.photo.key, class:"card-event-photo"%>
                <% end %>
              </div>
              <h1 class="mx-width"><%= @event.event_name%></h1>
          </div>
      </div>
  </div>
</div>

<svg class="curveUpColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 100 C 20 0 50 0 100 100 Z"></path>
</svg>

<div class="container">

  <div class="row" style="grid-gap:0 !important; padding: 1% !important;">

    <div class="row" style="grid-gap: 0!important; padding: 1% !important; align-items:center !important;">

      <div class="col" style="align-items:center !important;" >
        <img class="stadium-png"src="https://res.cloudinary.com/dbnrwssis/image/upload/v1667346251/crowd/stadium_content_q2umzf.png" alt="stadium-iso">
        <p> Lugar: <%=@event.address %> </p>
      </div>

      <div class="col" style="vertical-align: middle !important;">
        <div class="row row-cols-2" style="grid-gap:0 !important; padding: 1% !important;">
          <div class="col"><a style="color: grey !important; text-align: center;"><strong>Date:</strong></a></div>
          <div class="col"><%= @event.event_date %></div>
          <div class="col"><a style="color: grey !important; text-align: center;"><strong>Capacity:</strong></a></div>
          <div class="col"><%=@event.event_capacity %></div>
        </div>
      </div>

      <div class="col-6">
        <div class= "map-show" data-controller="map"
          id='map'
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-markers-value="<%= @markers.to_json %>"
          <%# style='width: 500px; height: 400px;'> %>>
        </div>
      </div>
    </div>

  <div class="container">
  <div class="row" style="grid-gap: 0!important; padding: 1% !important; align-items:center !important;">
    <div class="col">
      $<%= @event.event_price %>
    </div>
    <div class="col">
      <% if user_signed_in? %>
              <button type="text-center" class="btn btn-primary">
              <h2><%= link_to "BUY", new_event_order_path(@event), class:"btn-primary"%></h2>
              </button>
          <% else %>
            <a>Log in to buy tickets</a>
          <% end %>
    </div>
  </div>
  <div class="row">
      <div class="col-sm-4">

      </div>
    </div>
  </div>



</div>
