<!--/events or event#index-->
<div class="container-form">

  <h2 class="text-center text-dark ">CROWD</h2>

  <div class="search-bar m-4">
    <%= form_tag(search_path, :method => "get") do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Search your team...", class: "form-control"%>
      <div class="input-group-btn">
        <%= button_tag(type: "button", class: "btn btn-primary") do %>
          <i class="fa-solid fa-paper-plane-top"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="card-grid">
    <div class="row row-cols-3">
      <% if @events %>
        <% @events.each do |event| %>
        <div class="card col">
          <div class="card-body text-wrap row">
            <div class="col-8">
              <h5 class="card-title-events"><%= link_to event.event_name, event_path(event.id)  %></h5>
            </div>
            <div class="col-4">
              <h5 class="card-text">
                <%= event.event_date %></h5>
              <!-- esto es un condicional. Si hay boletas se muestra el lugar, si no, el boton de sold out---> <p class="card-details"><%= event.event_location%>
                <%#= link_to "Edit event", edit_event_path(event), class: "card-btn btn btn-primary" %></p>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
