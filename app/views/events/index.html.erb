<!--/events or event#index-->

<div class="parallax-section3 parallax3">
  <div class="grid grid-pad">
      <div class="col-1-1" style="vertical-align= center;">
            <div class="content content-header" >
              <h2 style="text-align: center;">Events</h2>
          </div>
      </div>
  </div>
</div>

<svg class="curveUpColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 100 C 20 0 50 0 100 100 Z"></path>
</svg>

<div class="container-form m-2">

  <div class="search-bar m-4">
    <%= form_tag(search_path, :method => "get") do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Search your event...", class: "form-control"%>
      <div class="input-group-btn">
        <%= button_tag(type: "button", class: "btn btn-primary") do %>
          <i class="fa-solid fa-paper-plane-top"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="card-group">
    <div class="row row-cols-3">
      <% if @events %>
        <% @events.each do |event| %>
      <div class="card col card-container-bg">
        <div class="card-event">
          <div class="col-8">
            <% if event.photo %>
              <%= cl_image_tag event.photo.key, class:"card-event-photo-index"%>
            <% end %>
            <h5 class="card-title card-event-title"><%= link_to event.event_name, event_path(event.id)  %></h5>
          </div>
          <div class="col-4">
            <p class="card-details card-details-text"><%= event.event_date %></p>
            <p class="card-details card-details-text"><%= event.address%></p>
          </div>
        </div>
      </div>
        <% end %>
      <% end %>
    </div>

    </div>
        <div data-controller="map"
          id='map'
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-markers-value="<%= @markers.to_json %>"
          style='width: 500px; height: 400px;'>
    </div>
  </div>

  </div>

<svg class="curveDownColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 0 C 50 100 80 100 100 0 Z"></path>
</svg>
