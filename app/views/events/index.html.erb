<!--/events or event#index-->
<div class="container-form m-4">

  <h1>event#index</h1>
  <p>Find mi in app/views/events/index</p>
  <h2 class="text-center text-dark ">CROWD</h2>

  <div class="m-4">
    <%= form_tag(search_path, :method => "get") do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Search your team...", class: "form-control"%>
      <div class="input-group-btn">
        <%= button_tag(type: "button", class: "btn btn-primary") do %>
          <i class="fa-solid fa-paper-plane-top"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="card-container p-3">
    <div class="row row-cols-3">
      <% if @events %>
        <% @events.each do |event| %>
        <div class="card col d-flex container-text-center m-2">
          <div class="card-body text-wrap row">
            <div class="col-4">
              <h5 class="card-title-events"><%= link_to event.event_name, event_path(event.id)  %></h5>
            </div>
            <div class="col-4">
              <h3 class="card-text"> <%= event.event_date%></h3>
              <h6><%= event.event_location%></h6>
              <%= link_to "Edit event", edit_event_path(event), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
