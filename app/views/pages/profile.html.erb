<div class="parallax-section4 parallax-event">
  <div class="grid grid-pad">
    <div class="col-1-1" style="vertical-align= center;">
      <div class="content content-header">
      <div><h1>My profile</h1></div>
      </div>
    </div>
  </div>
</div>

<svg class="curveUpColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 100 C 20 0 50 0 100 100 Z"></path>
</svg>

<div class="container-profile img-fluid">

  <div class="col-md-5 mt-4">
    <div class="card profile-card-4">
      <div class="card-img-block">
        <div class="info-box">Follow your passion. It will lead you to your purpose!</div>
            <%# <img class="img-fluid" src="https://w0.peakpx.com/wallpaper/515/792/HD-wallpaper-stadium-stands-seats-sports-black-and-white.jpg" alt="Card image cap"> %>
        </div>
        <div class="card-body pt-5">
            <%= cl_image_tag current_user.photo.key, class:"profile"%>
            <h5 class="card-title text-center pb-2"><%= current_user.name + " " + current_user.last_name %></h5>
            <p class="card-text text-center ">You are a distinguished soccer fan.</p>
            <li class="py-2"><strong> Identification: </strong> <%= current_user.identification_number %></li>
            <li class="py-2"><strong> Email: </strong> <%= current_user.email %></li>
        </div>
        <div class="text-center">
          <%= link_to "Edit profile", edit_user_registration_path, class: "btn button-sign-up" %>
        </div>
      </div>
  </div>

  <div class="container events">
    <div class="col-md-12 mt-4">
      <div class="card profile-card-4">
        <div class="card-body pt-5">
          <h5 class="card-title text-center"> My orders</h5>
          <p class="card-text text-center">You have gone to:</p>
        <% if current_user.orders.length < 2 %>
          <li class="py-2"><strong> Order 1 </strong></li>
          <%= current_user.orders.first.tickets.first.event.event_name %>
        <% else %>
          <li class="py-2"><strong> Order 1 </strong></li>
          <%= current_user.orders.first.tickets.first.event.event_name %>
          <li class="py-2"><strong> Order 2 </strong></li>
          <%= current_user.orders.second.tickets.first.event.event_name %>
        <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-12 mt-4">
      <div class="card profile-card-4">
        <div class="card-body pt-5">
          <h5 class="card-title text-center"> Upcoming events</h5>
          <p class="card-text text-center">You might be interested in:</p>
          <li class="py-2"><strong> <%= link_to Event.first.event_name, event_path(Event.first.id)%> </strong></li>
          <li class="py-2"><strong> <%= link_to Event.second.event_name, event_path(Event.second.id)%> </strong></li>
        </div>
      </div>
    </div>
  </div>
</div>

<svg class="curveDownColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 0 C 50 100 80 100 100 0 Z"></path>
</svg>
