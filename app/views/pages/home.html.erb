                <% if Event.first.photo %>
                  <%= cl_image_tag Event.first.photo.key, class:"card-event-photo-index"%>
                <% end %>
                <h5 class="card-title card-event-title"><%= link_to Event.first.event_name, event_path(Event.first.id)  %></h5>
              </div>
              <div class="col-4">
                <p class="card-details card-details-text"><%= Event.first.event_date %></p>
                <p class="card-details card-details-text"><%= Event.first.event_location%></p>
              </div>
            </div>
          </div>

