<div class="parallax-section parallax1">
  <div class="grid grid-pad">
    <div class="col-1-1">
      <div class="content content-header" >
        <h1>CROWD</h1>
          <div class="search-bar m-4">
            <%= form_tag(search_path, :method => "get") do %>
              <div class="input-group">
              <%= search_field_tag :search, params[:search], placeholder: "Search your event...", class: "form-control"%>
                <div class="input-group-btn">
                  <%= button_tag(type: "button", class: "btn btn-primary") do %>
                  <i class="fa-solid fa-paper-plane-top"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

<svg class="curveUpColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 100 C 20 0 50 0 100 100 Z"></path>
</svg>


