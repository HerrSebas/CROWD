<div class="container" style="display: flex; justify-content: center;">
  <% if current_user.admin?%>
    <div class="ticket-container">
      <ul>
        <li>Name: <%= "#{@ticket.user.name} #{@ticket.user.last_name}" %></li>
        <li>Identification: <%= @ticket.user.identification_number %></li>
        <li>Event: <%= @ticket.event.event_name %></li>
        <li>Date: <%= @ticket.event.event_date %></li>
        <h2 class="text-center">Access permited!</h2>
      </ul>
    </div>
  <% else %>

    <div class="ticket-container">
      <ul>
        <h2 class="text-center">View not allowed</h2>
        <li>You are not allowed to see this view. Contact an Admin</li>
      </ul>
    </div>
  <% end %>
</div>
<svg class="curveDownColor" xmlns="http://www.w3.org/2000/svg" version="1.1" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 0 C 50 100 80 100 100 0 Z"></path>
</svg>
